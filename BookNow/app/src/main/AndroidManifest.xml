        </activity>
        <activity android:name=".view.activity.HomeActivity" />
        <activity android:name=".view.activity.ManageExperiencesActivity" />
        <activity android:name=".view.activity.ActiveBookingActivity" />
        <activity android:name=".view.activity.CreateBookStepOneActivity" />
